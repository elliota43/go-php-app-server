#!/usr/bin/env php
<?php

use BareMetalPHP\Console\Application;

require __DIR__ . '/vendor/autoload.php';

// Bootstrap the application to load .env and config
// This ensures console commands have access to environment variables and service providers
$app = null;
if (file_exists(__DIR__ . '/bootstrap/app.php')) {
    $app = require __DIR__ . '/bootstrap/app.php';
}

$console = new Application($app);

$console->run($argv);