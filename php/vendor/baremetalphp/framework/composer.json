{
    "name": "baremetalphp/framework",
    "description": "A lightweight, educational PHP framework with service container, routing, ORM, and more",
    "type": "library",
    "license": "MIT",
    "keywords": ["framework", "php", "mvc", "orm", "routing"],
    "autoload": {
        "psr-4": {
            "BareMetalPHP\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Elliot Anderson",
            "email": "elliot.anderson43@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5"
    },
    "bin": [
        "mini"
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "scripts": {
        "test": "phpunit"
    }
}

